<div class="container mt-3 px-2">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 mb-5 pb-3">
      <div class="mb-2">
        <%= link_to 'エリア一覧', areas_path %> >
        <span  style="font-size: 1.2em" ><%= @area.area_name %></span>
        <% if user_signed_in? && current_user.admin? %>
          &nbsp;<%= link_to '編集', edit_area_path(@area) %>
        <% end %>
      </div>
      <div>
        <table class="table table-sm">
          <thead>
            <tr>
              <th scope="col">サブエリア名</th>
              <th scope="col">登録ルート数</th>
            </tr>
          </thead>
          <% @sub_areas.each do |sub_area| %>
            <tr>
              <td>
                <%= link_to sub_area_path(sub_area) do %>
                <span style="font-size: 1.2em"><%= sub_area.sub_area_name %></span>
                <% end %>
              </td>
              <td>
               <%= sub_area.od_routes.count %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
      <%= link_to "新規サブエリア登録", new_area_sub_area_path(@area), class:"btn btn-outline-primary btn-block my-3" %>
    </div>
  </div>
</div>
