<div class="container mt-3 px-2">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 mb-5 pb-3">
      <div class="d-flex align-items-center">
        <h4><%= @area.area_name %> - <%= @sub_area.sub_area_name %> </h4>&nbsp;
        <%= link_to '編集', edit_area_sub_area_path(@area, @sub_area) %>
      </div>
      <div>
        <% @od_routes.each do |od_route| %>
          <%= link_to od_route_path(od_route) do %>
            <div>
              <span style="font-size: 1.2em"><%= od_route.route_name %></span>
            </div>
          <% end %>
        <% end %>
      </div>
      <% if current_user.admin? %>
        <%= link_to "新規ルート登録(管理者用)", new_sub_area_od_route_path(@sub_area), class:"btn btn-outline-primary btn-block my-3" %>
      <% end %>
    </div>
  </div>
</div>
