<div class="container mt-3">
  <h1><%= @gym.name %></h1>
  <% if current_user.admin %>
    <p><%= @gym.name_katakana %></p>
    <p><%= @gym.name_alphabet %></p>
    <p><%= @gym.longitude %></p>
    <p><%= @gym.latitude %></p>
    <%= link_to 'ジム情報変更', edit_gym_path(@gym), class:'btn btn-primary' %>
  <% end %>
  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>

