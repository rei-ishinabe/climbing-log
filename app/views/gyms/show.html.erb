<div class="container mt-3">
  <h1><%= @gym.name %></h1>
  <div class="row">
    <div class="col-12 col-md-6">
      <% if current_user.admin %>
        <p><%= @gym.name_katakana %></p>
        <p><%= @gym.name_alphabet %></p>
        <p><%= @gym.longitude %></p>
        <p><%= @gym.latitude %></p>
        <%= link_to 'ジム情報変更', edit_gym_path(@gym)%>
      <% end %>
      <p>累計本数：<%= @gym.logs.where('user_id = ?', current_user).count %></p>
      <%= link_to '新規ログ登録', new_gym_log_path(@gym), class:'btn btn-secondary' %>
    </div>
    <div class="col-12 col-md-6">
      <div
      id="map"
      style="width: 100%;
      height: 300px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      class="rounded shadow my-3"
      ></div>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <% @gym.logs.where('user_id = ?', current_user).each do |log| %>
        <p>
          <%= log.date %>
          <%= log.category %>
          <%= log.route_type %>
          <%= "#{log.grade}#{log.sub_grade}" %>
          <%= log.status %>
          <%= log.route_name %>
          <%= log.comment %>
        </p>
      <% end %>
    </div>
  </div>
</div>

