<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <h3 class="text-center">ジム検索/選択</h3>
      <% if current_user.logs.exists? %>
        <h4>最近訪問したジム</h4>
        <% @gyms_visited.each do |gym| %>
          <div>
            <% gym = Gym.find(gym) %>
            <% if gym.last_visit_date(current_user).present? %>
              <%= link_to gym.name, gym_path(gym) %>
              <%= gym.last_visit_date(current_user) %>
            <% end %>
          </div>
        <% end %>
      <% end %>
      <%= form_tag gyms_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control mt-3",
          placeholder: "ジム名(漢字、カタカナ、アルファベット)の一部を入力"
        %>
        <%= submit_tag "絞り込み検索", class: "btn btn-primary btn-block btn-lg mt-3 mb-3" %>
      <% end %>
        <% if @gyms.present? %>
          <% @gyms.each do |gym| %>
            <div>
              <%= link_to gym_path(gym) do %>
                <span style="font-size: 1.2em"><%= gym.name %></span>  - <%= gym.address[0,3] %>
              <% end %>
            </div>
          <% end %>
          <div class="my-3 mx-auto">
            <%= paginate @gyms %>
          </div>
        <% else %>
          <div>検索条件に合致するジムがみつかりませんでした。</div>
          <% if current_user.admin? %>
            <%= link_to "新規ジム登録(管理者用)", new_gym_path, class:"btn btn-outline-primary btn-block my-3" %>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
